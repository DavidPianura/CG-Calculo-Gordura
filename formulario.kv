<CG>
    txt_altura: txtAltura 
    txt_peso: txtPeso
    lbl_volume: lblVolumePulmao
    lbl_densidade: lblDensidade
	lbl_gordura: lblPercentualGordura

	
    FloatLayout:
        size_hint: None, None
        size: root.width, root.height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        BoxLayout:
            orientation: 'vertical'

            GridLayout:
                cols: 1

                GridLayout:
                    cols: 2

					Label:
						text: "Nome Voluntário"
					TextInput:
						id: txtInputNomeVoluntario
						size: self.size
						multiline: False

					Label:
						text: "Sexo"
					TextInput:
						multiline: False

					Label:
						text: "Idade"
					TextInput:
						id: txtInputIdade
						multiline: False

					Label:
						text: "Etnia"
					TextInput:
						id: txtInputEtnia
						multiline: False

					Label:
						text: "Altura (cm)"
					TextInput:
						id: txtAltura
						multiline: False

					Label:
						text: "Peso (gramas)"
					TextInput:
						id: txtPeso
						multiline: False

                GridLayout:
                    cols: 1

                    Button:
                        id: btnShowPly
                        text: "Exibir malha 3D"
						background_color: 0,0,1, 1
						size_hint: 0.3, 0.6
                        on_press: root.render_ply()
                        
                    Button:
                        id: calcular_button
                        text: "Calcular"
						background_color: 0,0,1, 1
						size_hint: 0.3, 0.6
						on_press: root.calcular()
					
					Label:
                        text: "Volume Malha: 104857896"
						size_hint: 0.3, 0.6

                    Label:
						id: lblPercentualGordura
                        text: "% de gordura: "

					Label:
						id: lblVolumePulmao
                        text: "Volume Pulmão: "

                    Label:
						id: lblDensidade 
                        text: "Densidade: "
